<%- include('partials/header') -%>

  <div class="col-6">

    <div class="profileBanner">
        <p><strong>User Name</strong>: <%= user.userName %></p>
        <p><strong>Email</strong>: <%= user.email %></p>

        <a href="/logout" class="profileLogout">Logout</a>

    </div>


    <!-- 
      /*************************************************************************************************/
      /*
      **       .profileUserName
      */
      /*************************************************************************************************/
    -->

    <div class="profileUserName">

      <h2>band name</h2>
      <p><strong>User Name</strong>: <%= user.userName %></p>

      <div class="mt-5">
        <h2>Add a comment</h2>
        <form action="/bandName/createBandName/" method="POST">
          <div class="mb-3">
              <label for="comment" class="form-label">Comment</label>
              <input type="text" class="form-control" id="comment" name="comment">
          </div>
          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
      </div>

    </div>




    <!-- 
      /*************************************************************************************************/
      /*
      **       .profileMainImage
      */
      /*************************************************************************************************/
    -->

    <div class="profileMainImage">

      <form action="" enctype="multipart/form-data" method="POST">
                <!-- action="/post/createPost" -->

        <div class="mb-3">
          <label for="imgUpload" class="form-label">Image</label>
          <input type="file" class="img-upload" id="imageUpload" name="file">
        </div>

        <button type="submit" class="btn btn-primary" value="Upload">Submit</button>

        <a class="returnToFeedButton" href="/feed">Return to Feed</a>
      </form>


    </div>



        <!-- 
      /*************************************************************************************************/
      /*
      **       
      */
      /*************************************************************************************************/
    -->

        
    <div class="profilePostBoxContainer">

      <div class="profilePostBox">

        <h2>Add a post</h2>
            
        <form action="/post/createPost" enctype="multipart/form-data" method="POST">

          <div class="mb-3">
              <label for="title" class="form-label">Title</label>
              <input type="text" class="form-control" id="title" name="title">
          </div>

          <div class="mb-3">
            <label for="caption" class="form-label">Caption</label>
            <textarea class="form-control" id="caption" name="caption"></textarea>
          </div>

          <div class="mb-3">
            <label for="imgUpload" class="form-label">Image</label>
            <input type="file" class="img-upload" id="imageUpload" name="file">
          </div>

          <button type="submit" class="btn btn-primary" value="Upload">Submit</button>

          <a class="returnToFeedButton" href="/feed">Return to Feed</a>
        </form>
      </div>



    </div>
  </div>

      
  <div class="profilePosts">

    <ul class="profilePostList">
    <% for(var i=0; i<posts.length; i++) {%>
      <li class="profilePost">
        <a href="/post/<%= posts[i]._id%>">
          <img class="img-fluid" src="<%= posts[i].image%>">
        </a>
      </li>
    <% } %>
    </ul>

  </div>  


<%- include('partials/footer') -%>