<%- include('partials/header') -%>

    <div class="updateUserContainer">

        <h1>Update User Information</h1>
        
        <form action="/user/updateUser/<%= user.id %>?_method=PUT" method="POST">

            <div class="updateProfilePic">
                <img src="<%= user.image %>" alt="">
                <form class="col-1" action="/updateProfilePic?_method=PUT" method="POST"  enctype="multipart/form-data">
                    <input type="file" name="profilePic" id="imageInput" accept="image/*">

                </form>
            </div>

            <div class="updateUserInfo">

                <label for="userName">Username:</label>
                <input type="text" id="userName" name="userName" value="<%= user.userName %>"><br><br>
    
                <label for="firstName">First Name:</label>
                <input type="text" id="firstName" name="firstName" value="<%= user.firstName %>"><br><br>
    
                <label for="lastName">Last Name:</label>
                <input type="text" id="lastName" name="lastName" value="<%= user.lastName %>"><br><br>
        
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" value="<%= user.email %>"><br><br>

            </div>

            <div class="occupation">
                <select type="title" name="title" id="title" for="title">
                    <option value="musician">Musician</option>
                    <option value="actor">Actor</option>
                    <option value="model">Model</option>
                    <option value="comedian">Comedian</option>
                </select>
            </div>


            <div class="bio">
                <label for="description">Description:</label>
                <textarea id="description" name="description"></textarea><br><br>
            </div>

            <div class="musician">
                <label for="spotify">Spotify:</label>
                <input type="url" id="spotify" name="spotify" value="<%= user.spotify %>"><br><br>
        
                <label for="soundcloud">SoundCloud:</label>
                <input type="url" id="soundcloud" name="soundcloud" value="<%= user.soundcloud %>"><br><br>
        
                <label for="appleMusic">Apple Music:</label>
                <input type="url" id="appleMusic" name="appleMusic" value="<%= user.appleMusic %>"><br><br>

                <label for="genre">Genre:</label>
                <input type="text" id="genre" name="genre" value="<%= user.genre %>"><br><br>
        
                <label for="yearFormed">Year Formed:</label>
                <input type="number" id="yearFormed" name="yearFormed" value="<%= user.yearFormed %>"><br><br>
        
                <label for="members">Members:</label>
                <input type="text" id="members" name="members" value="<%= user.members %>"><br><br>
            </div>

            <div class="actor"></div>

            <div class="comedian"></div>

            <div class="model"></div>
    



            <div class="updateUserSocials">
                <label for="website">Website:</label>
                <input type="url" id="website" name="website" value="<%= user.website %>"><br><br>

                <label for="instagram">Instagram:</label>
                <input type="url" id="instagram" name="instagram" value="<%= user.instagram %>"><br><br>
        
                <label for="tiktok">TikTok:</label>
                <input type="url" id="tiktok" name="tiktok" value="<%= user.tiktok %>"><br><br>
        
                <label for="twitter">Twitter:</label>
                <input type="url" id="twitter" name="twitter" value="<%= user.twitter %>"><br><br>
        
                <label for="youtube">YouTube:</label>
                <input type="url" id="youtube" name="youtube" value="<%= user.youtube %>"><br><br>
    
                <label for="facebook">Facebook:</label>
                <input type="url" id="facebook" name="facebook" value="<%= user.facebook %>"><br><br>
            </div>
    


            <button type="submit" id="btn" class="btn btn-primary">Update Information</button>

        </form>


    </div>



<%- include('partials/footer') -%>




