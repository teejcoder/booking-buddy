<%- include('partials/header') -%>

<div class="signupPage">
    
        <div class="signupFormContainer">

                <% if (locals.messages.errors) { %>
                    <% messages.errors.forEach( el => { %>
                        <div class="alert alert-danger"><%= el.msg %></div>
                    <% }) %>    
                <% } %>
                <% if (locals.messages.info) { %>
                    <% messages.info.forEach( el => { %>
                        <div class="alert alert-info"><%= el.msg %></div>
                    <% }) %>    
                <% } %>


                    
                <!-- <form action="/user/createUser/" method="POST" enctype="multipart/form-data"> -->
                <form action="signupTalentInfo.ejs" method="POST" enctype="multipart/form-data">

                    <h2>USER INFO</h2>
                    <div class="accountInfo">
                        <label for="userName">User Name:</label>
                        <input type="text" id="userName" name="userName" required>
                        
                        <label for="email">Email:</label>
                        <input type="email" id="email" name="email" required>
                        
                        <label for="password">Password:</label>
                        <input type="password" id="password" name="password">

                        <button type="submit" class="createUserButton btn btn-primary">Next</button>
                    </div>                       
                    

                </form>
        </div>
</div>


<%- include('partials/footer') -%>