<%- include('partials/header') -%>

<div class="signupPage">
    
        <div class="signupFormContainer">

                <% if (locals.messages.errors) { %>
                    <% messages.errors.forEach( el => { %>
                        <div class="alert alert-danger"><%= el.msg %></div>
                    <% }) %>    
                <% } %>
                <% if (locals.messages.info) { %>
                    <% messages.info.forEach( el => { %>
                        <div class="alert alert-info"><%= el.msg %></div>
                    <% }) %>    
                <% } %>


                <div class="accountInfo">
                    <form action="" method="POST" enctype="multipart/form-data">
                        <h2>USER INFO</h2>
                        
                        <input type="text" id="firstName" name="firstName" placeholder="First Name" required>
                        
                        
                        <input type="text" id="lastName" name="lastName" placeholder="Last Name" required>

                        
                        <input type="email" id="email" name="email" placeholder="Email Address" required>
                        
                        
                        <input type="password" id="password" placeholder="Password" name="password">

                        <div class="signupTitle">           
                            <select name="title" id="title" for="title">
                                <option value="musician">Musician</option>
                                <option value="actor">Actor</option>
                                <option value="model">Model</option>
                            </select>
                        </div>


                        <h2>TALENT INFO</h2>

                        <div class="profilePageInfo">           
                            
                            <label for="description" class="description">Description:</label>
                            <textarea name="description"></textarea>
                            
                            <label for="genre">Genre:</label>
                            <input type="text" id="genre" name="genre">
                            
                            <label for="yearFormed">Year Formed:</label>
                            <input type="number" id="yearFormed" name="yearFormed">
                            
                            <label for="members">Members:</label>
                            <input type="text" id="members" name="members">
                        
                            <label for="website">Website:</label>
                            <input type="url" id="website" name="website">
                            
                            <label for="image">Image:</label>
                            <input type="file" class="signupImage" id="image" name="image" accept="image/*">
                            
                        </div>

                        <h2>SOCIALS</h2>
                        <div class="socials">
                            
                            <label for="spotify">Spotify</label>
                            <input type="url" id="spotify" name="spotify">
                            
                            <label for="appleMusic">Apple Music</label>
                            <input type="url" id="appleMusic" name="appleMusic">
                        
                            <label for="facebook">Facebook</label>
                            <input type="url" id="facebook" name="facebook">
                        
                            <label for="instagram">Instagram</label>
                            <input type="url" id="instagram" name="instagram">
                            
                            <label for="twitter">Twitter</label>
                            <input type="url" id="twitter" name="twitter">
                                         
                            <label for="tiktok">TikTok</label>
                            <input type="url" id="tiktok" name="tiktok">
                        
                            <label for="youtube">YouTube</label>
                            <input type="url" id="youtube" name="youtube">
                        
                            <label for="soundcloud">Soundcloud</label>
                            <input type="url" id="soundcloud" name="soundcloud">

                        </div>
                        
                        <button type="submit" index="btn" class="createUserButton btn btn-primary">Create User</button>

                        
                    </form>             
                                            

                           
                </div>    
        </div>
</div>


<%- include('partials/footer') -%>